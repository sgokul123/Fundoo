<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rellay1"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/expandedImage"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:scaleType="centerCrop"
                android:src="@drawable/image"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="35dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:id="@+id/name"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="205dp"
                />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rellay1"
                android:layout_marginTop="360dp"
                android:id="@+id/lab1"
                android:layout_marginLeft="21dp"
                android:textSize="30dp"
                android:text="Engineer's Info"
                android:textStyle="bold"
                android:textColor="#6FB8D9"/>

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lab1"
                android:textSize="15dp"
                android:layout_marginLeft="21dp"
                android:text="ID"
                android:layout_marginTop="10dp"
                android:textColor="#3B5372"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_engg"
                android:text="iii"
                android:textSize="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="180dp"
                android:layout_below="@+id/lab1"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:ems="10"
                />
            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:textSize="15dp"
                android:text="Status"
                android:layout_below="@+id/id_engg"

                android:textColor="#3B5372"/>

            <TextView
                android:id="@+id/status_engg"
                android:text="iii"
                android:textSize="20dp"
                android:layout_below="@+id/id_engg"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="180dp"
                android:ems="10"/>

            <TextView
                android:layout_below="@+id/text2"
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:textSize="15dp"
                android:text="Company"
                android:layout_marginTop="20dp"
                android:textColor="#3B5372"/>

            <TextView
                android:layout_below="@id/status_engg"
                android:layout_marginTop="15dp"
                android:id="@+id/company_engg"
                android:text="iii"
                android:textSize="20dp"
                android:layout_marginLeft="180dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"/>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_below="@+id/text3"
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:textSize="15dp"
                android:text="Mobile"
                android:textColor="#3B5372"/>
            <TextView
                android:layout_below="@id/company_engg"
                android:id="@+id/mobile_engg"
                android:text="iii"
                android:textSize="20dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="15dp"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"/>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_below="@+id/text4"
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:textSize="15dp"
                android:text="Email Id"
                android:textColor="#3B5372"/>
            <TextView
                android:layout_below="@id/mobile_engg"
                android:text="iii"
                android:textSize="20dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:id="@+id/email_engg"
                android:ems="10"/>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_below="@+id/text5"
                android:id="@+id/text6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:textSize="15dp"
                android:text="BL Start Date"
                android:textColor="#3B5372"/>
            <TextView
                android:layout_below="@id/email_engg"
                android:text="iii"
                android:textSize="20dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/blstart_engg"
                android:ems="10"/>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_below="@+id/text6"
                android:id="@+id/text7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:textSize="15dp"
                android:text="Company Start Date"
                android:textColor="#3B5372"/>
            <TextView
                android:layout_below="@id/blstart_engg"
                android:text="iii"
                android:textSize="20dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/companystart_engg"
                android:ems="10"/>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_below="@+id/text7"
                android:id="@+id/text8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:textSize="15dp"
                android:text="Company Leave Date"
                android:textColor="#3B5372"/>
            <TextView
                android:layout_below="@id/companystart_engg"
                android:text="iii"
                android:textSize="20dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/companyleave_engg"
                android:ems="10"/>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_below="@+id/text8"
                android:id="@+id/text9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:textSize="15dp"
                android:text="Leave's Taken"
                android:textColor="#3B5372"/>
            <TextView
                android:layout_below="@id/companyleave_engg"
                android:text="iii"
                android:textSize="20dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/leave_engg"
                android:ems="10"/>
        </RelativeLayout>

    </ScrollView>

    <FrameLayout
        android:id="@+id/collapse_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

</android.support.design.widget.CoordinatorLayout>