<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_date_reason"
        android:layout_centerHorizontal="true"
        android:hint="Day Month Year"
       />

    <View android:id="@+id/titleDivider"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_below="@id/txt_date_reason"
        android:layout_marginTop="10dp"
        android:background="#878686" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reason"
        android:textSize="@dimen/dimen_20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/txt_reason"
        android:layout_marginLeft="50dp"
        android:layout_below="@id/titleDivider"/>

    <EditText
        android:id="@+id/edit_reason"

        android:layout_width="285dp"
        android:layout_height="80dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/rectangle"
        android:layout_below="@id/txt_reason"
        android:layout_centerHorizontal="true"
         />

    <TextView
        android:id="@+id/dialogtextreason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_reason"
        android:text="OK"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>
</RelativeLayout>