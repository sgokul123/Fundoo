<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".view.activity.AttendanceDetailsActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.v7.widget.Toolbar

        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        />
</android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="60dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attendence Details"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#6FB8D9"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datedisplay"
        android:textSize="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="60dp"
        android:text=""/>
    <Button
        android:layout_width="25dp"
        android:layout_height="28dp"
        android:id="@+id/date"
        android:background="@drawable/arrowdown"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="62dp"/>
    <GridView
        android:id="@+id/calendar"
        android:layout_marginTop="120dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="7">

    </GridView>
    <Button
        android:layout_below="@id/calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_marginLeft="70dp"
        android:background="#7e84d6"
        android:id="@+id/btn_save"
        android:layout_marginTop="20dp"/>
    <Button
        android:layout_below="@id/calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:background="#7e84d6"
        android:layout_toRightOf="@id/btn_save"
        android:layout_marginLeft="30dp"
        android:id="@+id/btn_cancel"
        android:layout_marginTop="20dp"/>

    </RelativeLayout>
    <FrameLayout
        android:layout_marginTop="55dp"
        android:id="@+id/attendance_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
</RelativeLayout>
