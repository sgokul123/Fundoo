<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/personal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    android:clickable="true"

    tools:context="com.fundoohr.view.fragment.PersonaldetailsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/lay1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_marginTop="@dimen/dimen_20dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Personal Details"
                    android:textColor="#6FB8D9"
                    android:textSize="30dp"
                    android:layout_weight="0.7"
                    android:textStyle="bold" />


                <ImageButton
                    android:background="#ffffff"
                    android:id="@+id/personal_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:layout_weight="0.3"
                    android:src="@drawable/edit" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/lay2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_below="@+id/lay1"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="ID   "
                    android:layout_weight="0.7"
                    android:textColor="#3B5372"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/personal_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_weight="0.3"
                    android:maxLines="1"
                    android:ems="9" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lay2"
                android:weightSum="1"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="Email"
                    android:textColor="#3B5372"
                    android:layout_weight="0.7"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/personal_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_weight="0.3"
                    android:maxLines="1"
                    android:imeOptions="actionDone"
                    android:ems="9" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lay3"
                android:weightSum="1"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="Mobile"
                    android:layout_weight="0.7"
                    android:textColor="#3B5372"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/personal_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:inputType="phone"
                    android:layout_weight="0.3"
                    android:maxLines="1"
                    android:ems="9" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lay5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_below="@id/lay4"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="Date Of Birth"
                    android:textColor="#3B5372"
                    android:layout_weight="0.6"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/personal_dob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_weight="0.4"
                    android:maxLines="1"
                    android:ems="9" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lay6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_below="@+id/lay5"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="0.6"
                    android:text="Father Name"
                    android:textColor="#3B5372"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/personal_father"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:layout_alignParentRight="true"
                    android:maxLines="1"
                    android:ems="9" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/lay7"
                android:layout_width="match_parent"
                android:weightSum="1"
                android:layout_height="wrap_content"
                android:layout_below="@id/lay6"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="0.5"
                    android:text="Mobile(Father)"
                    android:textColor="#3B5372"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/personal_father_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_alignParentRight="true"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:ems="9" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lay8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_below="@id/lay7"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="0.6"
                    android:text="Occupation"
                    android:textColor="#3B5372"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/personal_occup"
                    android:layout_weight="0.4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:maxLines="1"
                    android:ems="9" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_below="@id/lay8"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="Annual Salary"
                    android:layout_weight="0.7"
                    android:textColor="#3B5372"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/personal_anual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_weight="0.3"
                    android:maxLines="1"
                    android:ems="10" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lay10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_below="@id/lay9"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="Mumbai Address"
                    android:textColor="#3B5372"
                    android:layout_weight="0.5"

                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/personal_mumbaiadd"
                    android:layout_weight="0.5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:maxLines="4"
                    android:ems="9" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lay11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_below="@id/lay10"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:layout_marginLeft="12dp"
                    android:layout_below="@+id/personal_mumbaiadd"
                    android:text="Permanent Address"
                    android:textColor="#3B5372"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/personal_peradd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:layout_alignParentRight="true"
                    android:maxLines="4"
                    android:ems="9" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_below="@id/lay11"
                >
                <Button
                    android:text="Save"
                    android:id="@+id/save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="35dp"
                    android:layout_marginLeft="65dp"/>
                <Button
                    android:text="Cancel"
                    android:id="@+id/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_weight="0.5"
                    android:layout_marginBottom="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="65dp"/>
            </LinearLayout>

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>